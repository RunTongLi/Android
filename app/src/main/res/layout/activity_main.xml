<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteX="1dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
            android:id="@+id/recycle_view"/>
    <Button
            android:text="New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/new_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="onNewButtonPress"/>

</androidx.constraintlayout.widget.ConstraintLayout>